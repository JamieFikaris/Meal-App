<Window x:Class="Meal_App.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meal_App"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="Beige"
        Title="" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" FontSize="40" FontFamily="MV Boli">Welcome!</TextBlock>
        <Button Command="{Binding ButtonCommand}" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" FontSize="15" FontFamily="MV Boli">Continue</Button>
    </Grid>
</Window>
